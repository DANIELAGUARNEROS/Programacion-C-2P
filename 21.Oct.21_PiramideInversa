#include <stdio.h>
void imp3(int);

int main(void)
{
	int n;
	printf("Ingrese un numero entero:  ");
	scanf("%d", &n);
	imp3(n);
	
}

void imp3(int c)
{
	int k, l, x;
	for (k=0; k<=c; k++)
	{
		for (x=c; x>=k; x--)
		{
			printf("\t");
		}
		for (l=k; l>=1; l--)
		{	
			printf("%d  \t", l);
		}
		printf("\n");
	}
}
